{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"noUnusedLocals": true,
		"outDir": "lib",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2021"
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/*.test.*"
	]
}